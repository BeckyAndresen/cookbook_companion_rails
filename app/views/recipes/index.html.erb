<h1>Cookbook Companion</h1>

<%= field_set_tag "Select Ingredients for Recipe Search" do %>
  <%= form_with url: root_path, method: :get do |form| %>
    <%= form.collection_check_boxes(:ingredients, Ingredient.all, :id, :name) do |box| %>
      <div class="ingredient">
        <%= box.check_box %>
        <%= box.label %>
      </div>
    <% end %>

    <div class="ingredient-submit">
      <%= form.submit "Search" %>
    </div>
  <% end %>
<% end %>

<h2>Recipes</h2>
<% if @recipes.empty? %>
  <p>No recipes were found for the selected ingredients.</p>
<% else %>
    <ul class="card-group">
    <% @recipes.each do |recipe| %>
      <li class="card"><%= render partial: "recipe", object: recipe %></li>
    <% end %>
  </ul>
<% end %>
